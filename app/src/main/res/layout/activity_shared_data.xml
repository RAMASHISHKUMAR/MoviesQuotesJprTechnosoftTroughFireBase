<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SharedDataActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:background="@drawable/bg"
                android:alpha=".5"
                android:layout_width="match_parent"
                android:layout_height="420dp">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:elevation="5dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/arrowId"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Movie Quote"
                        android:textStyle="normal"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/shareQuotes"
                        android:layout_marginLeft="140dp"
                        android:src="@drawable/ic_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/shared_qutoes"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:textColor="@color/white"
                    android:text="@string/problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/writer"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="80dp"
                    android:textColor="@color/white"
                    android:text="@string/jack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/pirates"
                    android:textSize="18sp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="80dp"
                    android:textColor="#8A7979"
                    android:text="@string/Pirates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />





            </LinearLayout>

        </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recyclershared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</ScrollView>